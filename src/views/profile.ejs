<div class="container h-100 flex-center-center">
  <div class="text-center flex-center-center flex-column">
    <i class="icon mb-5" style="width: 100px; height: 100px;"><%- include('./icons/user-icon'); -%></i>
    <ul class="list-group list-group-flush border-top border-bottom" style="width: 300px;">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="text-secondary"><%= t('username') %></span>
        <span class="fw-bold"><%= locals.loggedUser ? locals.loggedUser.username : '-' %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="text-secondary"><%= t('email') %></span>
        <span class="fw-bold"><%= locals.loggedUser ? locals.loggedUser.email : '-' %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span class="text-secondary"><%= t('role') %></span>
        <span class="fw-bold"><%= locals.loggedUser ? locals.loggedUser.role : '-' %></span>
      </li>
    </ul>
  </div>
</div>