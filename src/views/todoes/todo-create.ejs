<div class="todoes">
  <section class="d-flex justify-content-center align-items-end gap-2 mt-2 mb-4">
    <h2 class="title">
      <%- include('../icons/tasks-icon'); %>
      <span><%= t('create') %></span>
    </h2>
  </section>

  <form class="needs-validation" method="post" action="/todoes/create" autocomplete="off">
    <div class="mb-3">
      <%- include('../partials/input-text', { id: "task", maxLength: 150, isAutofocus: true }); -%>
    </div>

    <div class="d-flex gap-2">
      <a id="back-link" href="/todoes" role="button" class="btn btn-secondary">
        <i class="icon" style="width: 21px; height: 21px;"><%- include('../icons/back-icon'); -%></i>
        <span><%= t('back') %></span>
      </a>
      <button type="submit" class="btn btn-primary">
        <i class="icon" style="width: 14px; height: 14px;"><%- include('../icons/save-icon'); -%></i>
        <span><%= t('save') %></span>
      </button>
    </div>
  </form>
</div>