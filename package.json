{
	"name": "express-ejs-mongo-bootstrap-ts",
	"version": "1.0.0",
	"main": "server.js",
	"type": "module",
	"keywords": [
		"express",
		"ejs",
		"mongodb",
		"vite",
		"bootstrap",
		"typescript",
		"boilerplate",
		"starter"
	],
	"author": "ferrylinton",
	"license": "ISC",
	"description": "Simple Express Web Application With EJS, MongoDB, Bootstrap and Typescript",
	"scripts": {
		"dev": "npm run build-bootstrap && cross-env NODE_ENV=development vite",
		"build": "rimraf dist && npm run build-bootstrap && cross-env NODE_ENV=production vite build",
		"build-bootstrap": "cross-env NODE_ENV=development vite build --config vite.config.bootstrap.ts",
		"start": "cd dist && cross-env NODE_ENV=production node server.js",
		"start-install": "cd dist && npm install --omit=dev",
		"init-db": "tsx ./src/db/init-db.ts",
		"init-data": "tsx ./src/db/init-db.ts",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"format": "prettier src --write",
		"format:check": "prettier src --check",
		"prepare": "simple-git-hooks"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"pre-push": "npm run format"
	},
	"lint-staged": {
		"src": [
			"npm run lint:fix"
		]
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"canvas": "^3.2.0",
		"compression": "^1.8.1",
		"cookie-parser": "^1.4.7",
		"cross-env": "^10.0.0",
		"dotenv": "^17.1.0",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-favicon": "^2.0.4",
		"i18n": "^0.15.1",
		"mongodb": "^6.18.0",
		"theme-toggles": "^4.10.1",
		"winston": "^3.17.0",
		"zod": "^4.0.14"
	},
	"devDependencies": {
		"@eslint/js": "^9.35.0",
		"@faker-js/faker": "^9.9.0",
		"@fullhuman/postcss-purgecss": "^7.0.2",
		"@popperjs/core": "^2.11.8",
		"@types/bootstrap": "^5.2.10",
		"@types/compression": "^1.8.1",
		"@types/cookie-parser": "^1.4.9",
		"@types/ejs": "^3.1.5",
		"@types/express": "^5.0.3",
		"@types/fs-extra": "^11.0.4",
		"@types/i18n": "^0.13.12",
		"@types/node": "^24.0.10",
		"@types/postcss-import": "^14.0.3",
		"autoprefixer": "^10.4.21",
		"axios": "^1.11.0",
		"bootstrap": "^5.3.7",
		"cssnano": "^7.1.0",
		"date-fns": "^4.1.0",
		"eslint": "^9.35.0",
		"execa": "^9.6.0",
		"fs-extra": "^11.3.0",
		"glob": "^11.0.3",
		"lint-staged": "^16.1.6",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-discard-comments": "^7.0.4",
		"postcss-import": "^16.1.1",
		"postcss-preset-env": "^10.2.4",
		"prettier": "^3.6.2",
		"prettier-plugin-ejs": "^1.0.3",
		"rimraf": "^6.0.1",
		"rollup-plugin-node-externals": "^8.0.1",
		"sass-embedded": "^1.90.0",
		"simple-git-hooks": "^2.13.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.43.0",
		"vite": "^7.0.4",
		"vite-tsconfig-paths": "^5.1.4"
	}
}